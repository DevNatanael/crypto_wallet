<p style="color: green"><%= notice %></p>

<div class="show-container">
  <div class="page-header">
    <h1>Detalhes da Moeda</h1>
    <div class="breadcrumb">
      <%= link_to "Moedas", coins_path, class: "breadcrumb-link" %> /
      <span class="breadcrumb-current">Detalhes</span>
    </div>
  </div>

  <div class="coin-details-card">
    <%= render @coin %>
  </div>

  <div class="action-buttons">
    <%= link_to "Editar esta moeda", edit_coin_path(@coin), class: "btn btn-warning" %>
    <%= link_to "Voltar para moedas", coins_path, class: "btn btn-secondary" %>
    <%= button_to "Excluir moeda", @coin, method: :delete,
                  data: { confirm: "Tem certeza que deseja excluir esta moeda?" },
                  class: "btn btn-danger" %>
  </div>
</div>

<style>
