<% content_for :title, "Editar Moeda" %>

<div class="edit-container">
  <div class="page-header">
    <h1>Editar Moeda</h1>
    <div class="breadcrumb">
      <%= link_to "Moedas", coins_path, class: "breadcrumb-link" %> /
      <span class="breadcrumb-current">Editar</span>
    </div>
  </div>

  <%= render "form", coin: @coin %>

  <div class="page-actions">
    <%= link_to "Ver esta moeda", @coin, class: "btn btn-info" %>
    <%= link_to "Voltar para moedas", coins_path, class: "btn btn-secondary" %>
  </div>
</div>

<style>
.edit-container {
  max-width: 800px;
  margin: 0 auto;
  padding: 20px;
}

.page-header {
  margin-bottom: 30px;
  text-align: center;
}

.page-header h1 {
  color: #333;
  margin: 0 0 10px 0;
  font-size: 2.2em;
}

.breadcrumb {
  color: #6c757d;
  font-size: 0.95em;
}

.breadcrumb-link {
  color: #007bff;
  text-decoration: none;
  transition: color 0.2s;
}

.breadcrumb-link:hover {
  color: #0056b3;
  text-decoration: underline;
}

.breadcrumb-current {
  color: #495057;
  font-weight: 500;
}

.page-actions {
  display: flex;
  justify-content: center;
  gap: 15px;
  margin-top: 30px;
  flex-wrap: wrap;
}

.btn {
  display: inline-block;
  padding: 10px 20px;
  text-decoration: none;
  border-radius: 6px;
  font-weight: 500;
  text-align: center;
  transition: all 0.2s;
  border: none;
  cursor: pointer;
  font-size: 0.95em;
  min-width: 100px;
}

.btn-info {
  background: #17a2b8;
  color: white;
}

.btn-info:hover {
  background: #138496;
  color: white;
}

.btn-secondary {
  background: #6c757d;
  color: white;
}

.btn-secondary:hover {
  background: #545b62;
  color: white;
}

@media (max-width: 768px) {
  .edit-container {
    padding: 15px;
  }

  .page-header h1 {
    font-size: 1.8em;
  }

  .page-actions {
    flex-direction: column;
    align-items: center;
  }

  .btn {
    width: 200px;
  }
}
</style>
